---
interface Props{
    title: string;
    date: string;
    description: string;
    image: string;
    tags: string[];
    style?: string;
}

import Link from './Link.astro'

import { colorPickerLetter } from '../utils/colorPickerLetter'
import { colors } from '../utils/colors'

const { title, date, description, image, tags, style } = Astro.props as Props;
---

<article class={"post p-2.5 h-fit flex flex-col self-center" + ' ' + style}>
    <Link href="#" rel="noopener" target='_blank' style="text-center my-3 text-2xl">
        <img src={image} class="w-full h-48 object-cover rounded-3xl"/>
        {title}
    </Link>
    <span class="md:text-xs text-2xs text-accent opacity-50">{date}</span>
    <p class="overflow-hidden text-ellipsis line-clamp-2 opacity-70 contr">{description}</p>
    <div class="flex flex-wrap gap-2 mt-2">
        {tags.map(tag => (
            <Link href="#" rel="noopener" target='_blank' style={`text-xs px-2 py-1 rounded-3xl contrast-75 ${colors[colorPickerLetter(tag[0])][0]} ${colors[colorPickerLetter(tag[0])][1]}`}>{tag}</Link>
        ))}
    </div>
</article>